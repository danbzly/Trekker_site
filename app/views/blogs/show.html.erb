<div class="container" style="height:50px; position: relative; top:10px;">

  
  <%= link_to 'Back', blogs_path, class: "label label-success" %>


</div>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <%= image_tag @blog.image.url(:large), class: "imgwd" %>
      </div>
      <div class="panel-body">
      <p><%= @blog.title %></p>
        <%= @blog.category %>
        <%= @blog.body_text %>
        <% if @blog.user == current_user %><br>
		<%= link_to 'Edit', edit_blog_path(@blog) %>
		<% end %>

      </div>
    </div>
  </div>
</div>