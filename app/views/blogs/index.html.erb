<h1>Listing blogs</h1>

<table>
  <thead>
    <tr>
     <th>Image</th>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
       <td><%= image_tag blog.image.url(:medium) %></td>
        <td><%= blog.title %></td>
        <td><%= blog.category %></td>
        <td><%= blog.description %></td>
        <td><%= blog.user.email %></td>
        <td><%= link_to 'Show', blog %></td>
        <% if blog.user == current_user %>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Blog', new_blog_path %>
<% end %>